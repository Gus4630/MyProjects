<Page x:Class="FreelancePlatform.CustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FreelancePlatform"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerPage">

    <Grid Background="Aqua">
        
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Label>Budget</Label>
            <Label Name="budget" VerticalAlignment="Top" Foreground="red" Content="{Binding Budget}"></Label>                    
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1">
                
            <Button Content="Create a task" Click="Button_Click"></Button>
            <Button Content="Created Tasks" Click="Button_Click_1"></Button>
            <Button Content="Exit from Account" Click="Button_Click_2"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
